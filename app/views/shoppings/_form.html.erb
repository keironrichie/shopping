<%= form_with(model: shopping, local: true) do |form| %>
  <% if shopping.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shopping.errors.count, "error") %> prohibited this shopping from being saved:</h2>

      <ul>
        <% shopping.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">

    <%= form.text_field :item ,class:"form-control", placeholder:"Item"%>
  </div>

  <div class="field form-group">
    <% form.label :size %>
    <%= form.text_field :size, class:"form-control", placeholder:"Size" %>
  </div>

  <div class="field form-group">
    <% form.label :quantity %>
    <%= form.number_field :quantity, class:"form-control", placeholder:"Quantity" %>
  </div>

  <div class="field form-group">
    <% form.label :comment %>
    <%= form.text_field :comment, class:"form-control", placeholder:"Comment" %>
  </div>

  <div class="field form-group">
    <% form.label :user_id%>
    <%= form.number_field :user_id, id: :shopping_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-success' %>
  </div>
<% end %>
